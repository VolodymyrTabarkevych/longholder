<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/white">

    <LinearLayout
        android:id="@+id/llAnalyticsSubscription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpAnalytics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tlAnalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_2"
            android:layout_marginTop="@dimen/sc_spacing_2"
            android:background="@color/transparent"
            app:tabBackground="@drawable/ic_tab_indicator_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="@dimen/spacing_1"
            app:tabPaddingStart="@dimen/spacing_0_75" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sc_spacing_2"
            android:fontFamily="@font/avenir_roman_regular"
            android:text="Starting at $4,99/month"
            android:textColor="@color/gray"
            android:textSize="@dimen/text.size.normal" />

        <com.traday.longholder.presentation.customviews.ProgressButton
            android:id="@+id/pbAnalyticsNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_2"
            android:layout_marginTop="@dimen/spacing_1_75"
            android:layout_marginBottom="@dimen/sc_spacing_3"
            app:progressButtonText="@string/common_next" />

        <com.traday.longholder.presentation.customviews.ProgressButton
            android:id="@+id/pbAnalyticsStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_2"
            android:layout_marginTop="@dimen/spacing_1_75"
            android:layout_marginBottom="@dimen/sc_spacing_3"
            android:visibility="gone"
            app:pbIcon="@drawable/img_rocket"
            app:progressButtonText="@string/onboarding_start" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/svAnalytics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/spacing_2"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAnalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAnalyticsTitle"
                style="@style/TextAppearance.App.Screen.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_3"
                android:text="@string/analytics_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivAnalyticsCalculate"
                style="@style/Widget.App.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_rectangle_radius_1"
                android:backgroundTint="@color/st_tropaz"
                android:src="@drawable/ic_calculator"
                app:layout_constraintBottom_toBottomOf="@id/tvAnalyticsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvAnalyticsTitle"
                tools:ignore="ContentDescription" />

            <com.traday.longholder.presentation.customviews.AppTextInputLayout
                android:id="@+id/tilAnalyticsSelectCurrency"
                style="@style/Widget.App.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1"
                app:endIconDrawable="@drawable/ic_small_arrow_to_bottom"
                app:layout_constraintTop_toBottomOf="@id/ivAnalyticsCalculate"
                app:startIconDrawable="@drawable/img_btc"
                app:startIconTint="@null">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actvAnalyticsSelectCurrency"
                    style="@style/Widget.App.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_2"
                    android:inputType="none"
                    tools:text="Bitcoin" />
            </com.traday.longholder.presentation.customviews.AppTextInputLayout>

            <LinearLayout
                android:id="@+id/llAnalyticsActives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tilAnalyticsSelectCurrency" />

            <LinearLayout
                android:id="@+id/llAnalyticsTotalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/llAnalyticsActives" />

            <ProgressBar
                android:id="@+id/pbAnalytics"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilAnalyticsSelectCurrency" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>