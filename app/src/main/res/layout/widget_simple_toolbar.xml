<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ibSimpleToolbarLeftActionButton"
        style="@style/Widget.App.ActionButton"
        android:src="@drawable/ic_arrow_to_left"
        tools:ignore="ContentDescription" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvSimpleToolbarRightAction"
        style="@style/Widget.App.ActionButton"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/st_tropaz"
        android:textSize="@dimen/text.size.medium"
        tools:text="Skip" />
</LinearLayout>