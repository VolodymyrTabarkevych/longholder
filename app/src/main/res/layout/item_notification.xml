<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_radius_2"
    app:cardElevation="@dimen/elevation_0_5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_2">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/widget_size_2_5"
            android:layout_height="@dimen/widget_size_2_5"
            android:src="@drawable/img_btc"
            app:layout_constraintBottom_toBottomOf="@id/tvNotificationTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvNotificationTitle"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvNotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1_25"
            android:fontFamily="@font/avenir_black_extra_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text.size.medium"
            app:layout_constraintStart_toEndOf="@id/ivNotification"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bitcoin" />

        <TextView
            android:id="@+id/tvNotificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_roman_regular"
            android:textColor="@color/gray"
            android:textSize="@dimen/text.size.normal"
            app:layout_constraintBaseline_toBaselineOf="@id/tvNotificationTitle"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="22/02/2022" />

        <TextView
            android:id="@+id/tvNotificationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_1"
            android:fontFamily="@font/avenir_black_extra_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text.size.normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationTitle"
            tools:text="Your holding has ended. You have earned:" />

        <TextView
            android:id="@+id/tvNotificationEarned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_0_75"
            android:fontFamily="@font/avenir_black_extra_bold"
            android:textColor="@color/limeade"
            android:textSize="@dimen/text.size.medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationDescription"
            tools:text="+8 323,13 ($1 225,60)" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>