<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivDropdownCurrency"
        android:layout_width="@dimen/widget_size_2_5"
        android:layout_height="@dimen/widget_size_2_5"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_2"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDropdownCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_2"
        android:ellipsize="end"
        android:fontFamily="@font/avenir_roman_regular"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black"
        android:textSize="@dimen/text.size.medium"
        tools:text="Bitcoin" />
</LinearLayout>