<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_sign_up"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.traday.longholder.presentation.signup_email.SignUpEmailFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up_email">
        <action
            android:id="@+id/action_signUpFragment_to_signUpNameFragment"
            app:destination="@id/signUpNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpNameFragment"
        android:name="com.traday.longholder.presentation.signup_name.SignUpNameFragment"
        android:label="SignUpNameFragment"
        tools:layout="@layout/fragment_sign_up_name">
        <action
            android:id="@+id/action_signUpNameFragment_to_singUpPasswordFragment"
            app:destination="@id/singUpPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/singUpPasswordFragment"
        android:name="com.traday.longholder.presentation.signup_password.SingUpPasswordFragment"
        android:label="SingUpPasswordFragment"
        tools:layout="@layout/fragment_sign_up_password" />
</navigation>