<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_3"
    app:cardCornerRadius="@dimen/corner_radius_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_2"
        android:paddingVertical="@dimen/spacing_3">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text.size.xx_medium"
            tools:text="Do you want to Log out?" />

        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_2_5"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/gray"
            android:textSize="@dimen/text.size.normal"
            tools:text="If you stop your holding now, the coin will be removed from your wallet. " />

        <com.traday.longholder.presentation.customviews.ProgressButton
            android:id="@+id/pbDialogPositiveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_2_5"
            app:progressButtonText="@string/common_ok" />

        <com.traday.longholder.presentation.customviews.ProgressButton
            android:id="@+id/pbDialogNegativeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_2"
            app:progressButtonText="@string/common_cancel"
            app:progressButtonType="emptyWithBorderRed" />
    </LinearLayout>

</androidx.cardview.widget.CardView>